<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hugocastelani.whatsappjzistickerpack">

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.hugocastelani.whatsappjzistickerpack.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hugocastelani.whatsappjzistickerpack.StickerPackListActivity"
            android:label="@string/title_activity_sticker_packs_list" />
        <activity
            android:name="com.hugocastelani.whatsappjzistickerpack.StickerPackDetailsActivity"
            android:parentActivityName="com.hugocastelani.whatsappjzistickerpack.StickerPackListActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hugocastelani.whatsappjzistickerpack.StickerPackListActivity" />
        </activity>
        <activity
            android:name="com.hugocastelani.whatsappjzistickerpack.StickerPackInfoActivity"
            android:label="@string/title_activity_sticker_pack_info"
            android:parentActivityName="com.hugocastelani.whatsappjzistickerpack.StickerPackDetailsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hugocastelani.whatsappjzistickerpack.StickerPackDetailsActivity" />
        </activity>

        <provider
            android:name="com.hugocastelani.whatsappjzistickerpack.StickerContentProvider"
            android:authorities="${contentProviderAuthority}"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.whatsapp.sticker.READ" />
    </application>
</manifest>
